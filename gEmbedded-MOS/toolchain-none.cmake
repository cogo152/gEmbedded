set(CMAKE_HOST_SYSTEM_NAME "Linux")
set(CMAKE_SYSTEM_NAME "Generic")
set(CMAKE_SYSTEM_PROCESSOR "arm")

set(ARM_NONE_EABI_PATH "/usr/bin")
set(ARM_NONE_EABI_TOOLCHAIN_PREFIX "${ARM_NONE_EABI_PATH}/arm-none-eabi")

set(CMAKE_TRY_COMPILE_TARGET_TYPE   STATIC_LIBRARY)

set(CMAKE_ASM_COMPILER              "${ARM_NONE_EABI_TOOLCHAIN_PREFIX}-gcc" CACHE INTERNAL "asm")
set(CMAKE_C_COMPILER                "${ARM_NONE_EABI_TOOLCHAIN_PREFIX}-gcc" CACHE INTERNAL "c")
set(CMAKE_CXX_COMPILER              "${ARM_NONE_EABI_TOOLCHAIN_PREFIX}-g++" CACHE INTERNAL "c++")
set(CMAKE_LINKER                    "${ARM_NONE_EABI_TOOLCHAIN_PREFIX}-ld" CACHE INTERNAL "ld")
set(CMAKE_AR                        "${ARM_NONE_EABI_TOOLCHAIN_PREFIX}-gcc-ar" CACHE INTERNAL "gcc-ar")
set(CMAKE_NM                        "${ARM_NONE_EABI_TOOLCHAIN_PREFIX}-gcc-nm" CACHE INTERNAL "gcc-nm")
set(CMAKE_RANLIB                    "${ARM_NONE_EABI_TOOLCHAIN_PREFIX}-gcc-ranlib" CACHE INTERNAL "gcc-ranlib")
set(CMAKE_OBJCOPY                   "${ARM_NONE_EABI_TOOLCHAIN_PREFIX}-objcopy" CACHE INTERNAL "objcopy")
set(CMAKE_OBJDUMP                   "${ARM_NONE_EABI_TOOLCHAIN_PREFIX}-objdump" CACHE INTERNAL "objdump")
set(CMAKE_SIZE                      "${ARM_NONE_EABI_TOOLCHAIN_PREFIX}-size" CACHE INTERNAL "size")
set(CMAKE_STRINGS                   "${ARM_NONE_EABI_TOOLCHAIN_PREFIX}-strings" CACHE INTERNAL "strings")
set(CMAKE_STRIP                     "${ARM_NONE_EABI_TOOLCHAIN_PREFIX}-strip" CACHE INTERNAL "strip")

set(CMAKE_FIND_ROOT_PATH "${ARM_NONE_EABI_PATH}")
set(CMAKE_FIND_ROOT_PATH_MODE_PROGRAM NEVER)
set(CMAKE_FIND_ROOT_PATH_MODE_LIBRARY ONLY)
set(CMAKE_FIND_ROOT_PATH_MODE_INCLUDE ONLY)
